@model List<Mission08_Group2_3.Models.Task>

@* Table 1 *@
<h2>Quadrant 1</h2>
<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Task Name</td>
            <td>Due Date</td>
            <td>Quadrant</td>
            <td>Category</td>
            <td>Completed</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var listItem in ViewBag.TasksQuadrant1)
        {
            <tr>
                <td>@listItem.TaskName</td>
                <td>@listItem.DueDate</td>
                <td>@listItem.Quadrant</td>
                <td>@listItem.Category?.CategoryName</td>
                <td>@listItem.Completed</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@listItem.TaskId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@listItem.TaskId">Delete</a></td>
            </tr>
        }
    <tbody>
</table>

