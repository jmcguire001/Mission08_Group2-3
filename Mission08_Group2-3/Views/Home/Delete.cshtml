@model Mission08_Group2_3.Models.Task
<h2>Deletion Confirmation</h2>
<h3>Are you sure you want to remove @Model.TaskName?</h3>
<form method="post">
    <input type="hidden" asp-for="TaskId" />

    <button type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="Index">Cancel</a>
</form>